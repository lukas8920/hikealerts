{
  "openapi": "3.0.1",
  "info": {
    "title": "Hiking Events API",
    "description": "This API provides information about events that affect the accessibility of hiking paths, including dangers and weather impacts. Official institutions can manage and publish events, and third-party applications can search for these events based on geospatial coordinates and other criteria.",
    "version": "1.0.0",
    "contact": {
      "name": "Hiking Events Support",
      "url": "https://hikingevents.example.com/support",
      "email": "support@hikingevents.example.com"
    }
  },
  "tags": [
    {
      "name": "Events",
      "description": "Operations related to hiking events"
    }
  ],
  "paths": {
    "/events": {
      "get": {
        "operationId": "getEvents",
        "tags": ["Events"],
        "summary": "Retrieve a list of events",
        "description": "Fetches a list of events that affect hiking paths. Events can be filtered by geospatial coordinates and other criteria.",
        "parameters": [
          {
            "name": "latitude",
            "in": "query",
            "required": true,
            "description": "Latitude of the location to search for events.",
            "schema": {
              "type": "number",
              "format": "float",
              "example": 37.7749
            }
          },
          {
            "name": "longitude",
            "in": "query",
            "required": true,
            "description": "Longitude of the location to search for events.",
            "schema": {
              "type": "number",
              "format": "float",
              "example": -122.4194
            }
          },
          {
            "name": "radius",
            "in": "query",
            "required": false,
            "description": "Radius in meters to search for events around the specified coordinates.",
            "schema": {
              "type": "integer",
              "example": 500
            }
          },
          {
            "name": "eventType",
            "in": "query",
            "required": false,
            "description": "Type of event to filter results.",
            "schema": {
              "type": "string",
              "example": "weather"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No events found for the specified criteria"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/events/{eventId}": {
      "get": {
        "operationId": "getEventById",
        "tags": ["Events"],
        "summary": "Retrieve a specific event by ID",
        "description": "Fetches detailed information about a specific event using its unique identifier.",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the event.",
            "schema": {
              "type": "string",
              "example": "12345"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of the event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Event"
                }
              }
            }
          },
          "404": {
            "description": "Event not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Event": {
        "type": "object",
        "required": ["id", "title", "description", "coordinates"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the event.",
            "example": "12345"
          },
          "title": {
            "type": "string",
            "description": "Title of the event.",
            "example": "Severe Weather Warning"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the event.",
            "example": "A severe thunderstorm is expected in the area, which may affect hiking paths."
          },
          "coordinates": {
            "type": "object",
            "required": ["latitude", "longitude"],
            "properties": {
              "latitude": {
                "type": "number",
                "format": "float",
                "description": "Latitude of the event location.",
                "example": 37.7749
              },
              "longitude": {
                "type": "number",
                "format": "float",
                "description": "Longitude of the event location.",
                "example": -122.4194
              }
            }
          },
          "radius": {
            "type": "integer",
            "description": "Optional radius in meters that is affected by the event.",
            "example": 500
          },
          "eventType": {
            "type": "string",
            "description": "Type of event (e.g., weather, danger).",
            "example": "weather"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the event was created.",
            "example": "2023-10-01T12:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the event was last updated.",
            "example": "2023-10-02T12:00:00Z"
          }
        },
        "additionalProperties": false
      }
    }
  }
}